<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
 <TextView

     android:layout_toRightOf="@+id/iv_type"
     android:layout_marginLeft="8dp"
     android:layout_marginTop="8dp"
     android:text="Tony"
     android:textColor="@color/text_333333"
     android:textSize="@dimen/sp_16"
     android:id="@+id/tv_name"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:src="@drawable/wei_chat"
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_type"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="收款"
        android:textColor="@color/text_color_gray_99"
        android:textSize="@dimen/sp_14"
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="@dimen/margin_16"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="10.00"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/sp_16"
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_amount"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:text="2018-09-08 09:28:00"
        android:textColor="@color/text_color_gray_99"
        android:textSize="@dimen/sp_14"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View android:layout_below="@+id/tv_type"
        style="@style/divide_line_marginleft"/>
</RelativeLayout>