<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TransQueryActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="起止日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_start"
            android:layout_toLeftOf="@+id/zhi"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="2018-07-25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zhi"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_end_date"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_end_date"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="2018-07-25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
<View style="@style/divide_line_marginleft"/>
    <RelativeLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="选择分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_more"
            android:id="@+id/tv_type"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333333"
            android:text="全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View style="@style/divide_line_match"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>